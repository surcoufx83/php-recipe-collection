
    <header class="navbar sticky-top navbar-expand navbar-dark bg-dark">
      <a class="navbar-brand mr-0 mr-md-2" href="/">{{ Config.PageHeader }}</a>
      <i class="fas fa-circle-notch text-light fa-spin"
        v-if="page.loading !== false"></i>
      <span class="small text-light"
        v-if="page.loading === false && user.isAdmin">${ page.loadingTime}</span>
      <div
        v-if="user.loggedIn === false && config.maintenanceEnabled === false">
        <ul class="navbar-nav flex-row">
          <li class="nav-item text-uppercase">
            <a class="nav-link" href="/login">{{ Controller.l('navigation_topbar_user_login') }}</a>
          </li>
        </ul>
      </div>
      <ul class="navbar-nav ml-md-auto d-none d-md-flex"
