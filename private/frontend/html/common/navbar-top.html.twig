          <div class="dropdown-menu dropdown-menu-right small p-1" aria-labelledby="navbarDropdown">
            <router-link class="dropdown-item" :to="{ name: 'settings'}">{{ Controller.l('navigation_topbar_user_settings') }}</router-link>
            <div class="dropdown-divider"></div>
            <router-link class="dropdown-item" to="/logout">{{ Controller.l('navigation_topbar_user_logout') }}</router-link>
