    <div class="container">
      <form action="{{ Controller.getlink('recipe:postnew') }}" class="needs-validation" method="post" autocomplete="off" novalidate>
        <div class="row justify-content-between">
          <div class="col-12">
            <h4>{{ Controller.l('newRecipe_intro_header') }}</h4>
            <p>{{ Controller.l('newRecipe_intro_subject')|raw }}</p>
            <p>{{ Controller.l('newRecipe_intro_requiredFields')|raw }}</p>
          </div>
        </div>
        <div class="row mt-3 justify-content-between">
          <div class="col-12 col-lg-5">
            <h5>{{ Controller.l('newRecipe_chapter1_header') }}</h5>
          </div>
          <div class="d-none d-lg-block col-lg-6">
            <h5>{{ Controller.l('newRecipe_chapter3_header') }}</h5>
          </div>
        </div>
        <div class="row mt-2 justify-content-between">
          <div class="col-12 col-lg-5">
            <div class="form-row">
              <div class="form-group col-12">
                <label for="recipe-name" class="col-form-label-sm">
                  <b>{{ Controller.l('newRecipe_chapter1_recipeName') }} <span class="text-contrast">*</span></b><br />
                  <span class="text-muted text-small">{{ Controller.l('newRecipe_chapter1_recipeNameDescription') }}</span>
                </label>
                <input class="form-control form-control-sm" type="text" id="recipe-name" name="name"
                  placeholder="{{ Controller.l('newRecipe_chapter1_recipeNamePlaceholder') }}"
                  aria-describedby="recipe-name-invalidFeedback"
                  required>
                <div class="invalid-feedback" id="recipe-name-invalidFeedback">
                  {{ Controller.l('newRecipe_chapter1_recipeNameInvalidFb') }}
                </div>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-12">
                <label for="recipe-description" class="col-form-label-sm">
                  <b>{{ Controller.l('newRecipe_chapter1_recipeDesc') }}</b><br />
                  <span class="text-muted text-small">{{ Controller.l('newRecipe_chapter1_recipeDescDescription') }}</span>
                </label>
                <textarea class="form-control form-control-sm h-100px" id="recipe-description" name="description"
                  placeholder="{{ Controller.l('newRecipe_chapter1_recipeDescPlaceholder') }}"></textarea>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-12">
                <label for="recipe-eater" class="col-form-label-sm">
                  <b>{{ Controller.l('newRecipe_chapter1_recipeEater') }} <span class="text-contrast">*</span></b><br />
                  <span class="text-muted text-small">{{ Controller.l('newRecipe_chapter1_recipeEaterDescription') }}</span>
                </label>
                <input class="form-control form-control-sm w-20" type="number" min="1" max="100" id="recipe-eater" name="eater"
                  value="{{ Controller.l('newRecipe_chapter1_recipeEaterPlaceholder') }}"
                  aria-describedby="recipe-eater-invalidFeedback"
                  required>
                <div class="invalid-feedback" id="recipe-eater-invalidFeedback">
                  {{ Controller.l('newRecipe_chapter1_recipeEaterInvalidFb') }}
                </div>
              </div>
            </div>
          </div>
          <div class="col-12 col-lg-6">
            <div class="d-block d-lg-none row mt-3">
              <div class="col-12">
                <h5>{{ Controller.l('newRecipe_chapter3_header') }}</h5>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-12">
                <label for="recipe-name" class="col-form-label-sm">
                  <b>{{ Controller.l('newRecipe_chapter3_recipePictures') }}</b><br />
                  <span class="text-muted text-small">{{ Controller.l('newRecipe_chapter3_recipePicturesDescription')|raw }}</span>
                </label>
              </div>
              <div class="col-12 row row-cols-2 row-cols-lg-3 bg-light-muted rounded image-upload-container p-0">
                <div class="d-none image-upload-item card h-200px" data-index="d" id="image-upload-dummy">
                  <img src="/pictures/placeholder-dot1px.png" class="card-img-top image-upload-picture" id="recipe-picture-d" style="object-fit: cover; height:163px!important;">
                  <div class="card-body p-0">
                    <button type="button" data-for="recipe-picture-uploader-d" data-index="d" id="image-upload-btn-dummy"
                      class="btn btn-blue btn-sm h-100 w-100 rounded-top-0 image-upload-btn">
                      <span class="span-upload">{{ Controller.l('newRecipe_chapter3_recipePicturesUpload')|raw }}</span>
                      <span class="span-delete d-none">{{ Controller.l('newRecipe_chapter3_recipePicturesRemove')|raw }}</span>
                    </button>
                    <input type="file" name="pictures" id="recipe-picture-uploader-d" value="Upload Photo"
                      class="image-upload-input" style="width: 0px;height: 0px;overflow: hidden;">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-12 col-lg-6">
            <h5>{{ Controller.l('newRecipe_chapter2_header') }} <span class="text-contrast">*</span></h5>
            <p>{{ Controller.l('newRecipe_chapter2_description')|raw }}</p>
          </div>
        </div>
        <div class="row mt-2">

        </div>



        <div class="row mt-3">
          <div class="col-12">
            <h5>{{ Controller.l('newRecipe_chapter5_header') }}</h5>
          </div>
        </div>
        <div class="row mt-2">
          <div class="col-12 col-lg-6">
            <div class="form-row">
              <div class="form-group col-12">
                <label for="recipe-sourcetext" class="col-form-label-sm">
                  <b>{{ Controller.l('newRecipe_chapter1_recipeSourceText') }}</b><br />
                  <span class="text-muted text-small">{{ Controller.l('newRecipe_chapter1_recipeSourceTextDescription') }}</span>
                </label>
                <input class="form-control form-control-sm" type="text" id="recipe-sourcetext" name="sourceText"
                  placeholder="{{ Controller.l('newRecipe_chapter1_recipeSourceTextPlaceholder') }}">
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-12">
                <label for="recipe-sourceurl" class="col-form-label-sm">
                  <b>{{ Controller.l('newRecipe_chapter1_recipeSourceUrl') }}</b><br />
                  <span class="text-muted text-small">{{ Controller.l('newRecipe_chapter1_recipeSourceUrlDescription') }}</span>
                </label>
                <input class="form-control form-control-sm" type="text" id="recipe-sourceurl" name="sourceUrl"
                  placeholder="{{ Controller.l('newRecipe_chapter1_recipeSourceUrlPlaceholder') }}">
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-12">
                <label for="recipe-tags" class="col-form-label-sm">
                  <b>{{ Controller.l('newRecipe_chapter1_recipeTags') }}</b><br />
                  <span class="text-muted text-small">{{ Controller.l('newRecipe_chapter1_recipeTagsDescription') }}</span>
                </label>
                <select class="form-control form-control-sm selectpicker text-small" name="tags"
                  data-live-search="true" data-size="10" multiple id="recipe-tags"
                  title="{{ Controller.l('newRecipe_chapter1_recipeTagsSelect') }}">{% for Tag in Tags %}
                  <option value="{{ Tag.getId() }}">{{ Tag.getName() }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
          </div>
        </div>

        <button class="btn btn-primary" type="submit">Submit form</button>
      </form>
    </div>
