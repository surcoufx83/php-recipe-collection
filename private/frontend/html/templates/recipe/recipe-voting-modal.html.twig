
    <div class="modal fade" id="recipe-rating-modal"
      aria-labelledby="recipe-rating-modal-title" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="recipe-rating-modal-title"
              v-text="$t('pages.recipe.rate.modal.title')">
            </h5>
          </div>
          <div class="modal-body d-none" id="recipe-rating-modal-submitting"
            v-text="$t('pages.recipe.rate.modal.submitting')">
          </div>
          <div class="modal-body d-none" id="recipe-rating-modal-submitted"
            v-text="$t('pages.recipe.rate.modal.submitted')">
          </div>
          <div class="modal-body bg-warning d-none" id="recipe-rating-modal-error">
            <span v-html="$t('pages.recipe.rate.modal.error')"></span><br />
            <span id="recipe-rating-modal-error-message"></span>
          </div>
          <div class="modal-body" id="recipe-rating-modal-mainbody">
            <span class="text-muted text-small" v-html="$t('pages.recipe.rate.modal.description')">
            </span>
            <h5 class="pt-3" v-text="$t('pages.recipe.rate.modal.cooked.title')"></h5>
            <div class="pb-3 mt-1 text-center">
              <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-outline-blue btn-sm">
                  <input type="radio" name="recipe-rating-cooked"
                    :checked="page.self.currentVote.cooked === 1"
                    value="1" v-model="page.self.currentVote.cooked"
                    > ${ $t('common.yesno.yes.uc') }</input>
                </label>
                <label class="btn btn-outline-blue btn-sm">
                  <input type="radio" name="recipe-rating-cooked"
                    :checked="page.self.currentVote.cooked === 0"
                    value="0" v-model="page.self.currentVote.cooked"
                    > ${ $t('common.yesno.no.uc') }</input>
                </label>
                <label class="btn btn-outline-blue btn-sm active">
                  <input type="radio" name="recipe-rating-cooked"
                    :checked="page.self.currentVote.cooked === -1"
                    value="-1" v-model="page.self.currentVote.cooked">
                    ${ $t('pages.recipe.rate.modal.cooked.none') }</input>
                </label>
              </div>
            </div>
            <h5 v-text="$t('pages.recipe.rate.modal.rating.title')"></h5>
            <span class="text-muted text-small" v-text="$t('pages.recipe.rate.modal.rating.description')"></span>
            <div class="pb-3 mt-1 text-center">
              <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-outline-blue btn-sm">
                  <input type="radio" name="recipe-rating-rated"
                    :checked="page.self.currentVote.rating === 1"
                    value="1" v-model="page.self.currentVote.rating">
                    ${ $t('pages.recipe.rate.modal.rating.easy') }
                </label>
                <label class="btn btn-outline-blue btn-sm">
                  <input type="radio" name="recipe-rating-rated"
                    :checked="page.self.currentVote.rating === 2"
                    value="2" v-model="page.self.currentVote.rating">
                    ${ $t('pages.recipe.rate.modal.rating.medium') }
                </label>
                <label class="btn btn-outline-blue btn-sm">
                  <input type="radio" name="recipe-rating-rated"
                    :checked="page.self.currentVote.rating === 3"
                    value="3" v-model="page.self.currentVote.rating">
                    ${ $t('pages.recipe.rate.modal.rating.hard') }
                </label>
                <label class="btn btn-outline-blue btn-sm active">
                  <input type="radio" name="recipe-rating-rated"
                    :checked="page.self.currentVote.rating === -1"
                    value="-1" v-model="page.self.currentVote.rating">
                    ${ $t('pages.recipe.rate.modal.rating.none') }
                </label>
              </div>
            </div>
            <h5 v-text="$t('pages.recipe.rate.modal.voting.title')"></h5>
            <span class="text-muted text-small" v-text="$t('pages.recipe.rate.modal.voting.description')"></span>
            <div class="pb-3 mt-1 text-center">
              <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-outline-blue btn-sm">
                  <input type="radio" name="recipe-rating-voted"
                    :checked="page.self.currentVote.voting === 1"
                    value="1" v-model="page.self.currentVote.voting"
                    > <fa-icon :icon="page.iconSet.like.icon" :space="page.iconSet.like.space" style="transform:translateY(-2px)"></fa-icon>
                </label>
                <label class="btn btn-outline-blue btn-sm">
                  <input type="radio" name="recipe-rating-voted"
                    :checked="page.self.currentVote.voting === 2"
                    value="2" v-model="page.self.currentVote.voting"
                    >
                    <fa-icon :icon="page.iconSet.like.icon" :space="page.iconSet.like.space" style="transform:translateY(2px)"></fa-icon>
                    <fa-icon :icon="page.iconSet.like.icon" :space="page.iconSet.like.space" style="transform:translateY(-2px)"></fa-icon>
                </label>
                <label class="btn btn-outline-blue btn-sm">
                  <input type="radio" name="recipe-rating-voted"
                    :checked="page.self.currentVote.voting === 3"
                    value="3" v-model="page.self.currentVote.voting"
                    >
                    <fa-icon :icon="page.iconSet.like.icon" :space="page.iconSet.like.space" style="transform:translateY(2px)"></fa-icon>
                    <fa-icon :icon="page.iconSet.like.icon" :space="page.iconSet.like.space" style="transform:translateY(-2px)"></fa-icon>
                    <fa-icon :icon="page.iconSet.like.icon" :space="page.iconSet.like.space" style="transform:translateY(2px)"></fa-icon>
                </label>
                <label class="btn btn-outline-blue btn-sm">
                  <input type="radio" name="recipe-rating-voted"
                    :checked="page.self.currentVote.voting === 4"
                    value="4" v-model="page.self.currentVote.voting"
                    >
                    <fa-icon :icon="page.iconSet.like.icon" :space="page.iconSet.like.space" style="transform:translateY(-2px)"></fa-icon>
                    <fa-icon :icon="page.iconSet.like.icon" :space="page.iconSet.like.space" style="transform:translateY(2px)"></fa-icon>
                    <fa-icon :icon="page.iconSet.like.icon" :space="page.iconSet.like.space" style="transform:translateY(-2px)"></fa-icon>
                    <fa-icon :icon="page.iconSet.like.icon" :space="page.iconSet.like.space" style="transform:translateY(2px)"></fa-icon>
                </label>
                <label class="btn btn-outline-blue btn-sm">
                  <input type="radio" name="recipe-rating-voted"
                    :checked="page.self.currentVote.voting === 5"
                    value="5" v-model="page.self.currentVote.voting"
                    >
                    <fa-icon :icon="page.iconSet.like.icon" :space="page.iconSet.like.space" style="transform:translateY(-2px)"></fa-icon>
                    <fa-icon :icon="page.iconSet.like.icon" :space="page.iconSet.like.space" style="transform:translateY(2px)"></fa-icon>
                    <fa-icon :icon="page.iconSet.like.icon" :space="page.iconSet.like.space" style="transform:translateY(-2px)"></fa-icon>
                    <fa-icon :icon="page.iconSet.like.icon" :space="page.iconSet.like.space" style="transform:translateY(2px)"></fa-icon>
                    <fa-icon :icon="page.iconSet.like.icon" :space="page.iconSet.like.space" style="transform:translateY(-2px)"></fa-icon>
                </label>
                <label class="btn btn-outline-blue btn-sm active">
                  <input type="radio" name="recipe-rating-voted"
                    :checked="page.self.currentVote.voting === -1"
                    value="-1" v-model="page.self.currentVote.voting" selected>
                    <fa-icon :icon="page.iconSet.reset.icon" :space="page.iconSet.reset.space"></fa-icon>
                </label>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <b-button type="button" id="recipe-rating-modal-spinner"
              class="btn-blue d-none" disabled>
              <fa-icon :icon="page.iconSet.spinner.icon" :space="page.iconSet.spinner.space" spin fw></fa-icon>
            </b-button>
            <b-button type="button" id="recipe-rating-modal-save"
              class="btn-blue" @click="onRatingSubmitPress">${ $t('pages.recipe.rate.modal.save') }</b-button>
            <b-button type="button" id="recipe-rating-modal-close"
              class="btn-outline-blue" data-dismiss="modal">${ $t('pages.recipe.rate.modal.close') }</b-button>
          </div>
        </div>
      </div>
    </div>
