          <div class="pt-5 pb-3 border-top border-light-dark" id="ingredients-anchor">
            <h4 v-text="$t('pages.recipe.ingredients.header')"></h4>
            <p v-html="$t('pages.recipe.ingredients.description', [ recipe.eaterCount ])">
            </p>
            <b-alert show variant="blue"
              class="px-2 px-lg-3 p-1">
              <b-form inline>
                ${ $t('pages.recipe.ingredients.inputPrefix') }
                <input type="number" min="1" max="99"
                  class="form-control form-control-sm text-center w-75px mx-2 py-0 fs-110 text-contrast bg-light"
                  v-model="recipe.eaterCountCalc"
                  @change="onEaterCountChanged"
                  ></input>
                ${ $t('pages.recipe.ingredients.inputPersons') }
              </b-form>
            </b-alert>
            <table class="table table-borderless table-sm">
              <tr>
                <th class="pl-0" v-text="$t('pages.recipe.ingredients.quantity')"></th>
                <th class="w-100" v-text="$t('pages.recipe.ingredients.ingredient')"></th>
              </tr>
              <tr is="recipe-ingredient"
                v-for="(ingredient, index) in recipe.preparation.ingredients" :key="index"
                :description="ingredient.description"
                :quantity="ingredient.quantityCalc"
                :unit="ingredient.unit"
                ></recipe-ingredient>
            </table>
          </div>
