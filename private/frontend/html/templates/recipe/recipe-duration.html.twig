                  <span v-else v-html="recipe.preparation.timeConsumed.formatted.preparing.valueStr"></span>
                </td>
              </tr>
              <tr>
                <th class="pl-0">{{ Controller.l('recipe_duration_restHeader') }}:</th>
                <td class="w-100">
                  <span v-if="recipe.preparation.timeConsumed.rest == 0">{{ Controller.l('recipe_duration_notSet') }}</span>
                  <span v-else v-html="recipe.preparation.timeConsumed.formatted.rest.valueStr"></span>
                </td>
              </tr>
              <tr>
                <th class="pl-0">{{ Controller.l('recipe_duration_cookingHeader') }}:</th>
                <td class="w-100">
                  <span v-if="recipe.preparation.timeConsumed.cooking == 0">{{ Controller.l('recipe_duration_notSet') }}</span>
                  <span v-else v-html="recipe.preparation.timeConsumed.formatted.cooking.valueStr"></span>
                </td>
